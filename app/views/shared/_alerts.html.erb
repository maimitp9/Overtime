<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Overtime App Alert", :sticky => false, :time => 1000) %>    
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Overtime App Error", :sticky => false, :time => 1000) %>    
<% else %>
  <%= js add_gritter(flash[:notice], title: "Overtime App Notfication", :sticky => false, :time => 1000) %>    
<% end %>
