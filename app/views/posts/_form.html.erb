<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <% @post.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title: "Overtime App Notfication", sticky: false) %>
    <% end %>
  <% end %>
  
  <div class="form-group">
    <%= f.label :date  %>
    <%= f.date_field :date, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :overtime_request  %>
    <%= f.number_field :overtime_request, step: :any, class: "form-control text_field" %>
  </div>
  <div class="form-group">
    <%= f.label :rational  %>
    <%= f.text_area :rational, class: "form-control" %>
  </div>
  
  <%= render partial: "status", locals: { f: f } if current_user.try(:type) == "AdminUser" %>

  <%= f.submit "Save", class: "btn btn-primary" %>
<% end %>
