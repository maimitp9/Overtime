<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <% @post.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title: "Overtime App Notfication", sticky: false) %>
    <% end %>
  <% end %>
  
  <div class="form-group">
    <%= f.label :date  %>
    <%= f.date_field :date, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :rational  %>
    <%= f.text_area :rational, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.radio_button :status, "submited" %>
    <%= f.label :submited  %>

    <%= f.radio_button :status, "approved" %>
    <%= f.label :approved  %>

    <%= f.radio_button :status, "rejected" %>
    <%= f.label :rejected  %>
  </div>
  <%= f.submit "Save", class: "btn btn-primary" %>
<% end %>
